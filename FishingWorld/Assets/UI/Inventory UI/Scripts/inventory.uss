/* Extra tooltip to help with instructions */
.tooltip {
  display: flex;
  flex-direction: column;

  position: absolute;

  min-width: 300px;
  min-height: 200px;

  max-width: 500px;
  max-height: 300px;

  width: 90%;
  height: 90%;

  padding: 10px;
  align-self: center;


  flex-direction: column;

  background-color: var(--color-primary);
  background-image: var(--image-TanVignette_Light);
  border-radius: 10px;
  border-width: 2px;
  border-color: rgba(23, 25, 35, 0.5);

  overflow: hidden;
}

.tooltip.hidden {
  display: none;
}

.tooltip__close {
  position: absolute;
  top: 2px;
  right: 2px;
}

.tooltip__close Image {
  --unity-image: var(--image-icon-close);

  width: 30px;
  height: 30px;
}

.tooltip-title {
  display: flex;
  flex-direction: row;

  align-items: center;
  justify-content: space-between;
}

.tooltip-title-text {
  font-size: 20px;
  color: var(--color-tertiary);
  -unity-font-definition: var(--font-inter-semi-bold);
  -unity-text-align: middle-left;
  text-shadow: 1px 1px 5px rgba(0, 0, 0, .8);

  white-space: nowrap;
}

.tooltip-description {
  flex-grow: 1;
}

.tooltip-description-text {
  font-size: 16px;
  color: var(--color-tertiary);
  -unity-font-definition: var(--font-inter-regular);

  -unity-text-align: middle-left;
  white-space: normal;
}